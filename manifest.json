{
  "manifest_version": 3,
  "name": "City Time Widget",
  "version": "1.0",
  "description": "Displays selected city time with country flag icon.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/default.png",
      "48": "icons/default.png",
      "128": "icons/default.png"
    }
  },
  "icons": {
    "16": "icons/default.png",
    "48": "icons/default.png",
    "128": "icons/default.png"
  }
}
